<p>Find me in app/views/sections/edit.html.erb</p>

<%if defined?@user.errors != nil%>
  <% @sections.errors.full_messages.each do |m| %>
  <P><%=m%></P>
  <%end%>
<%end%>

<h2>Edit Section</h2>
<form action="/sections/update/<%=@two.id%>" class="form-horizontal" method="POST" role="form">


  <input type="hidden" name ="authenticity_token" value ="<%= form_authenticity_token %>">


<div class="form-group">
  <div class="form-group">
    <label class="control-label col-sm-2" for="name">Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" value="<%= @two.name %>">
    </div>
  </div>
  
<br>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

