<h1>Contents#edit</h1>
<p>Find me in app/views/contents/edit.html.erb</p>

<%if defined?@user.errors != nil%>
  <% @contents.errors.full_messages.each do |m| %>
  <P><%=m%></P>
  <%end%>
<%end%>

<h2>Edit Content</h2>
<form action="/contents/update/<%=@inform.id%>" class="form-horizontal" method="POST" role="form">


  <input type="hidden" name ="authenticity_token" value ="<%= form_authenticity_token%>">


<div class="form-group">
  <div class="form-group">
    <label class="control-label col-sm-2" for="event">Event:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="event">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="message">Message:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="message">
    </div>
  </div>
<br>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
