<h1>Contents#edit</h1>
<p>Find me in app/views/contents/edit.html.erb</p>

<%if defined?@user.errors != nil%>
  <% @contents.errors.full_messages.each do |m| %>
  <P><%=m%></P>
  <%end%>
<%end%>

<h2>Edit Content</h2>
<form action="/contents/update/<%=@inform.id%>" class="form-horizontal" method="POST" role="form">


  <input type="hidden" name ="authenticity_token" value ="<%= form_authenticity_token%>">


<div class="form-group">
  <div class="form-group">
    <label class="control-label col-sm-2" for="title">Title:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="title" value="<%= @inform.title%>">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="text">Text:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="text" value="<%= @inform.text %>">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="section">Section:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="section" value="<%= @inform.section.name %>">
    </div>
  </div>
<br>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
