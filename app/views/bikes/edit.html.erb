<h2>Edit a Bike</h2>
<form action="/bikes/update/<%=@one.id%>" class="form-horizontal" method="POST" role="form">


	<input type="hidden" name ="authenticity_token" value ="<%= form_authenticity_token%>">


<div class="form-group">
    <label class="control-label col-sm-2" for="buyer">Buyer:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="buyer" value="<%=@one.buyer%>">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="donor">Donor:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="donor" value="<%=@one.donor%>">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="model">Model:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="model" value="<%=@one.model%>">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="brand">Brand:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="brand" value="<%=@one.brand%>">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="value">Value:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="value" value="<%=@one.value%>">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="barcode">Barcode:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="barcode" readonly>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="ebay">Ebay:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="ebay" value="<%=@one.ebay%>">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="created_at">Status:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="created_at" readonly>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="updated_at">Date:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="updated_at" readonly>
    </div>
  </div>
<br>
  <button type="submit" class="btn btn-default">Submit</button>
</form>


