<div class="container">
    <div class="row">
        <toast></toast>
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in</h1>
            <div class="account-wall">
                <img class="profile-img" src="<%= image_url("LogoSmall.png")%>"
                    alt="">
                <form class="form-signin">
                    <input type="text" placeholder= "Email" ng-enter="login()" name="username" id="username" ng-model="user.email" class="form-control" required autofocus>
                    <input type="password" placeholder="Password" ng-enter="login()" name="password" id="password" class="form-control" ng-model="user.password"/>
                    <button class="btn btn-lg btn-success btn-block" type="submit" ng-click="login()">
                        Sign in</button>
                </form>
            </div>
            <a ng-click='open()'>Forgot Password</a>
        </div>
    </div>
</div>
