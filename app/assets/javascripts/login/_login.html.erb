<div class="container-fluid">
  <div class="col-md-6 vertical-center row-centered">
    <div class="col-md-12">
      <div class="row">
        <img id="login_logo" src="<%= image_url("login_logo.png") %>" alt="" />
      </div>
      <div class="row">
        <h2 style="display:inline-block">Welcome, Admin! Please Login.</h2>
      </div>
    </div>
  </div>
  <div class="col-md-6 vertical-center">
    <div class="col-md-10">
        <toast></toast>
      <div class="login jumbotron">
        <h2>Login</h2>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" id="username" ng-model="user.email" class="form-control" />
          <span  class="help-block">Username is required</span>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" class="form-control" ng-model="user.password"/>
          <span class="help-block">Password is required</span>
        </div>
        <button ng-click='open()' class="btn btn-success">Forgot Password</button>
        <button ng-click="login()" class="btn btn-success">Login</button>
      </div>
    </div>
  </div>
</div>
